<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Talk_Light" parent="@android:style/Theme.Holo.Dialog">
        <item name="talk_divider">@color/talk_divider_black</item>
        <item name="talk_list_selector">@drawable/talk_selector</item>
        <item name="talk_btn_stacked_selector">@drawable/talk_selector</item>
        <item name="talk_btn_positive_selector">@drawable/talk_btn_selector</item>
        <item name="talk_btn_neutral_selector">@drawable/talk_btn_selector</item>
        <item name="talk_btn_negative_selector">@drawable/talk_btn_selector</item>
        <item name="android:windowAnimationStyle">@style/Talk_Dialog_Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Talk_Dark" parent="@android:style/Theme.Holo.Dialog">
        <item name="talk_divider">@color/talk_divider_white</item>
        <item name="talk_list_selector">@drawable/talk_selector_dark</item>
        <item name="talk_btn_stacked_selector">@drawable/talk_selector_dark</item>
        <item name="talk_btn_positive_selector">@drawable/talk_btn_selector_dark</item>
        <item name="talk_btn_neutral_selector">@drawable/talk_btn_selector_dark</item>
        <item name="talk_btn_negative_selector">@drawable/talk_btn_selector_dark</item>
        <item name="android:windowAnimationStyle">@style/Talk_Dialog_Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Talk_Dialog_Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Talk_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/talk_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Talk_ActionButton.Text">
        <item name="android:textSize">@dimen/talk_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>
</resources>